{
    "compilerOptions": {
        "strict": true,
        "target": "ES6",
        "module": "ESNext", 
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true, 
        "declarationMap": true,  
        "sourceMap": true,       
        "resolveJsonModule": true, 
        "allowSyntheticDefaultImports": true, 
        "isolatedModules": true   
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}