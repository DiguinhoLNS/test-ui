{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "lib": ["dom", "es2015", "es2017"],
      "declaration": true,
      "declarationDir": "./dist",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "jsx": "react",
      "moduleResolution": "node",
      "removeComments": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist",
        "**/*test*/**",
        "**/*test*.*"
    ]
  }